<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Motor_details.
    -->
    <changeSet id="20150708082751" author="jhipster">
        <createTable tableName="MOTOR_DETAILS">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="motor_type" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="no_of_nozzles" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="throat_dia" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="nozzle_dia" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="test_batch_id" type="bigint"/>
            <column name="throat_dia_uom_id" type="bigint"/>
            <column name="nozzle_dia_uom_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="test_batch_id"
                                 baseTableName="MOTOR_DETAILS"
                                 constraintName="fk_motor_details_test_batch_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TEST_BATCH"/>

        <addForeignKeyConstraint baseColumnNames="throat_dia_uom_id"
                                 baseTableName="MOTOR_DETAILS"
                                 constraintName="fk_motor_details_throat_dia_uom_id"
                                 referencedColumnNames="id"
                                 referencedTableName="UOM"/>

        <addForeignKeyConstraint baseColumnNames="nozzle_dia_uom_id"
                                 baseTableName="MOTOR_DETAILS"
                                 constraintName="fk_motor_details_nozzle_dia_uom_id"
                                 referencedColumnNames="id"
                                 referencedTableName="UOM"/>

    </changeSet>
</databaseChangeLog>
