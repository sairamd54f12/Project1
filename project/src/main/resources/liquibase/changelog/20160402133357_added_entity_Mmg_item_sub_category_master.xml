<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>
    <!--
        Added the entity Mmg_item_sub_category_master.
    -->
    <changeSet id="20160402133357" author="jhipster">
        <createTable tableName="MMG_ITEM_SUB_CATEGORY_MASTER">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_sub_category_code" type="varchar(255)"/>
            <column name="description" type="varchar(255)"/>
            <column name="status" type="integer"/>
            <column name="creation_date" type="timestamp"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="item_category" type="varchar(255)"/>
            <column name="mmg_item_category_master_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="MMG_ITEM_SUB_CATEGORY_MASTER" columnName="creation_date" columnDataType="datetime"/>

        <dropDefaultValue tableName="MMG_ITEM_SUB_CATEGORY_MASTER" columnName="last_modified_date" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="mmg_item_category_master_id"
                                 baseTableName="MMG_ITEM_SUB_CATEGORY_MASTER"
                                 constraintName="fk_mmg_item_sub_category_master_mmg_item_category_master_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MMG_ITEM_CATEGORY_MASTER"/>

    </changeSet>
</databaseChangeLog>
